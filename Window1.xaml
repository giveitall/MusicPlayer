<Window x:Class="TestPlayer.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wf="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
        
    Title="TBP" Height="400" Width="546" Loaded="Window_Loaded" WindowStyle="SingleBorderWindow" Padding="4" Background="Gray" Foreground="White" Closing="Window_Closed" >
    <Grid Background="#FF907A7A" OpacityMask="#FF907A7A" MouseWheel="gridMouseWheel"  KeyDown="keyDown">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="387*" />
            <ColumnDefinition Width="137*" />
        </Grid.ColumnDefinitions>
        <ComboBox Height="26" HorizontalAlignment="Left" Margin="0,5,0,0" Name="comboBox1" VerticalAlignment="Top" Width="389" SelectionChanged="comboBox1_SelectionChanged" Grid.ColumnSpan="2" >
            

        </ComboBox>
        <WindowsFormsHost Height="34" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="180" Margin="0,0,12,0" Grid.ColumnSpan="2">
            <wf:WebBrowser x:Name="webBr" Height="137" Width="492" Navigated="webBr_Navigated" />
        </WindowsFormsHost>
        <TextBox Height="26" Name="textBox1" VerticalAlignment="Top" Background="#FFA9BFA9" BorderBrush="Black" Margin="0,5,18,0" />
        <MediaElement Height="51" HorizontalAlignment="Left" Margin="0,243,0,0" Name="mediaElement1" LoadedBehavior="Manual" MediaEnded="mediaElement1_MediaEnded" VerticalAlignment="Top" Width="6" MediaOpened="mediaOpened" />
        <Button Content="Search" Height="25" HorizontalAlignment="Left" Margin="22,1,0,0" Name="button2" VerticalAlignment="Top" Width="107" Click="button2_Click" Background="#FF907A7A" Padding="0" HorizontalContentAlignment="Center" FlowDirection="LeftToRight" OpacityMask="#FF907A7A" BorderBrush="Black" Grid.Column="1" />
        <Button Content="Play" Height="29" HorizontalAlignment="Left" Margin="351,39,0,0" Name="button1" VerticalAlignment="Top" Width="45" Background="#FF907A7A" BorderBrush="Black" Click="button1_Click" Grid.ColumnSpan="2" />
        <Button Content="&gt;&gt;" Height="22" HorizontalAlignment="Left" Margin="92,39,0,0" Name="button3" VerticalAlignment="Top" Width="37" Grid.Column="1" />
        <TabControl HorizontalAlignment="Left" Margin="12,100,0,51" Name="tabControl1" Width="326" >
            <TabItem Header="Albums" Name="tabItem1" BorderBrush="Black" Background="#FF907A7A">
                <StackPanel Height="176" Name="stackPanel1" Width="318" Background="#FF907A7A"></StackPanel>
            </TabItem>
            <TabItem Header="Playlist" Name="tabItem2" Background="#FF907A7A" BorderBrush="Black">
                <ListBox Height="184" Name="listBox1" Width="317" SelectionChanged="listBox1_SelectionChanged_1" Background="#FF907A7A" />
            </TabItem>


        </TabControl>
        <Button Content="Save" Height="22" HorizontalAlignment="Left" Margin="170,308,0,0" Name="savePL" VerticalAlignment="Top" Width="70" Click="savePL_Click" />
        <Button Content="Load" Height="23" HorizontalAlignment="Left" Margin="246,307,0,0" Name="loadPL" VerticalAlignment="Top" Width="75" Click="loadPL_Click" />
        <Button Background="#FF907A7A" BorderBrush="Black" Content="Pause" Height="29" HorizontalAlignment="Left" Margin="26,39,0,0" Name="button4" VerticalAlignment="Top" Width="45" Click="button4_Click" Grid.Column="1" />
        <Slider Height="23" HorizontalAlignment="Left" Margin="12,35,0,0" Name="songSlider" VerticalAlignment="Top" Width="219" ValueChanged="valuechang" Focusable="False"  />
        <Button Content="Clear" Height="22" HorizontalAlignment="Left" Margin="88,307,0,0" Name="button5" VerticalAlignment="Top" Width="76" Click="button5_Click" />
        <CheckBox Content="Rnd" Height="16" HorizontalAlignment="Left" Margin="351,74,0,0" Name="checkBox1" VerticalAlignment="Top" Grid.ColumnSpan="2" />
        <Slider Height="185" HorizontalAlignment="Left" Margin="365,117,0,0" Name="slider1" VerticalAlignment="Top" Width="24" Orientation="Vertical" IsDirectionReversed="False" AutoToolTipPlacement="None" ValueChanged="sliderValueChanged" Maximum="1" Value="0.5" LargeChange="0.05" SmallChange="0.05" Grid.ColumnSpan="2" />
        <Button Content="Shuffle" Height="23" HorizontalAlignment="Left" Margin="17,308,0,0" Name="button6" VerticalAlignment="Top" Width="65" Click="button6_Click" />
        <Label Content="Label" Height="26" HorizontalAlignment="Left" Margin="147,63,0,0" Name="label1" VerticalAlignment="Top" Width="97" />
    </Grid>
</Window>
